@page
@model IndexModel

@inject IHttpContextAccessor contxt;

@{
    ViewData["Title"] = "Home page";
}

@inject IHttpContextAccessor contxt


<div class="container my-5">
    <h2 class="text-center">User Details</h2>
    <h3>Student status: @contxt.HttpContext.Session.GetString("Status")</h3>
    <form>
        <div class="form-group row">
            <div class="col-sm-3">
                <img src="@Model.User.ImageURL" class="img-fluid circle" alt="Profile Image">
            </div>
            <div class="col-sm-9">
                <div class="form-group">
                    <label asp for="@Model.User.FullName">Full Name</label>
                    <input type="text" readonly="readonly" value="@Model.User.FullName">
                </div>
                <div class="form-group">
                    <label asp for="@Model.User.CreditCardNo">Credit Card No</label>
                    <input type="text" readonly="readonly" value="@Model.User.CreditCardNo">
                </div>
                <div class="form-group">
                    <label asp for="@Model.User.Email">Email</label>
                    <input type="text" readonly="readonly" value="@Model.User.Email">
                </div>
                <div class="form-group">
                    <label asp for="@Model.User.PhoneNumber">Mobile Number</label>
                    <input type="text" readonly="readonly" value="@Model.User.PhoneNumber">
                </div>
                <div class="form-group">
                    <label asp for="@Model.User.DeliveryAddress">Delivery Address</label>
                    <input type="text" readonly="readonly" value="@Model.User.DeliveryAddress">
                </div>
@*                <div class="form-group">
                    <label asp for="@Model.User.PasswordHash">Password</label>
                    <input type="text" readonly="readonly" value="@Model.User.PasswordHash">
                </div>*@
                <div class="form-group">
                    <label asp for="@Model.User.AboutMe">About Me</label>
                    <input type="text" readonly="readonly" value="@Model.User.AboutMe">
                </div>
            </div>
        </div>
        @*      <a href="@Url.Page("EditUser", new { id = Model.Id })" class="btn btn-primary">Edit</a>*@
    </form>
</div>




</div>
